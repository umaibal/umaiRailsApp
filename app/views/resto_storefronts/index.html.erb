<% if notice %>
<aside id="notice"><%= notice %></aside>
<% end %>
<h1 align="center">Restaurant Table Catalog</h1>
<% @restaurants.each do |restaurant| %>
<ul class="list-group">
  <li>
    <li class="list-group-item"><h2><%= restaurant.name %></h2></li>
    <li class="list-group-item"><h4><%= link_to restaurant.website, target: :_blank %></h4></li>
    <li class="list-group-item"><p><%= number_to_phone(restaurant.phoneNum)%></p></li>
    <li class="list-group-item"><p><%= sanitize(restaurant.cuisineType) %></p></li>
    <li class="list-group-item"><p><%= restaurant.review %></p></li>
  </li>
</ul>
<% end %>
